{# PortfolioBundle/Resources/views/Portfolio/contact.html.twig #}
{% extends 'PeshPortfolioBundle:Portfolio:common/base.html.twig' %}


{% block title %}
	Contact
{% endblock %}


{% block style %}
    {{ parent() }}

    <link rel="stylesheet" href="{{ asset('bundles/peshportfolio/css/style-contact.css') }}" />
{% endblock %}


{% block body %}
	{% for label, flashes in app.session.flashbag.all %}
		{% for flash in flashes %}
			<div class="note alert-{{ label }}">
				{{ flash }}
			</div>
		{% endfor %}
	{% endfor %}

	<form action="{{ path('pesh_portfolio_contact') }}" method="post">
		{{ form_widget(form) }}
		<button type="submit">Envoyer</button>
	</form>
{% endblock %}